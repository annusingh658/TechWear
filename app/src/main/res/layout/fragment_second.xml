<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Profile Section -->

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="56dp"
        android:scaleType="circleCrop"
        android:src="@drawable/avatar"
        app:layout_constraintMargin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MD Alfahad"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/profile_image"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintMarginStart="8dp"/>

    <TextView
        android:id="@+id/user_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age - 19"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintStart_toStartOf="@id/user_name"/>

    <!-- Logo Section -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="382dp"
        android:layout_height="187dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/roundedcorners"
        android:scaleType="fitCenter"
        android:src="@drawable/logo12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintMarginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_image" />

    <Button
        android:id="@+id/explore_button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Explore now"
        android:background="@drawable/rounded_black_button"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginTop="8dp"/>




    <!-- Features Grid -->


    <LinearLayout
        android:layout_width="183dp"
        android:layout_height="200dp"
        android:background="@drawable/roundedcorners"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="628dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/policeman" />

        <TextView
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="129dp"
            android:layout_height="53dp"
            android:background="@drawable/buttonnnnn"
            android:text="Call now"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="183dp"
        android:layout_height="200dp"
        android:background="@drawable/roundedcorners"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="628dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/hospital" />

        <TextView
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:background="@drawable/buttonnnnn"
            android:text="Call now"
            android:textColor="@color/white" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="183dp"
        android:layout_height="200dp"
        android:background="@drawable/roundedcorners"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="412dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/locationnnnnnnn" />

        <TextView
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


        <Button
            android:layout_width="126dp"
            android:layout_height="42dp"
            android:background="@drawable/buttonnnnn"
            android:text="Check now"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="183dp"
        android:layout_height="200dp"
        android:background="@drawable/roundedcorners"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="412dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/locationnnnnnnn" />

        <TextView
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


        <Button
            android:layout_width="126dp"
            android:layout_height="42dp"
            android:background="@drawable/buttonnnnn"
            android:text="Check now"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>